
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
}
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Library</a></li>
        <li class="breadcrumb-item active">Data</li>
    </ol>
</nav>
<header>
    <div class="jumbotron text-center">
        <h1 class="display-5">Consorcio "Nombre"- Nueva Unidad</h1>
    </div>
</header>
<section>
    <div class="row">
        <div class="col">
        </div>
        <div class="col-6">
            <form>
                <fieldset>
                    <div class="form-group row">
                        <label for="staticConsorcio" class="col-sm-2 col-form-label">Consorcio</label>
                        <div class="col-sm-10">
                            <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="Nombre Consorcio">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputNombre">Nombre (*)</label>
                        <input type="text" class="form-control" id="inputNombre" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                        <label for="inputNombrePropietario">Nombre Propietario (*)</label>
                        <input type="text" class="form-control" id="inputNombrePropietario" placeholder="Nombre Propietario">
                    </div>
                    <div class="form-group">
                        <label for="inputApellidoPropietario">Apellido Propietario (*)</label>
                        <input type="text" class="form-control" id="inputApellidoPropietario" placeholder="Apellido Propietario">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email Propietario (*)</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="inputSuperficie">Sufercifie (*)</label>
                        <input type="text" class="form-control" id="inputSuperficie" placeholder="Superficie">
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="submit" class="btn btn-primary">Guardar y Crear Otra Unidad</button>
                    <button type="submit" class="btn btn-primary">Cancelar</button>
                </fieldset>
            </form>
        </div>
        <div class="col">
        </div>
    </div>
</section>