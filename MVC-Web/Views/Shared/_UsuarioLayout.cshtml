
@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    var mensaje = TempData["Mensaje"];
    var error = TempData["Error"];
}
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/js/DataTables/js")
@Styles.Render("~/js/DataTables/css")
@RenderSection("scripts", required: false)
<script type="text/javascript">
    var mensaje = '@mensaje';
    var error = '@error';
    if (mensaje) {
        if (error) {
            alertify.error(mensaje);
        }
        else {
            alertify.success(mensaje);
        }
        
    }    
</script>
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("S.A.C", "Index", "Consorcio", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Mis Consorcios", "Index", "Consorcio", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Salir", "Salir", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
</div>
<div class="container body-content">
    <nav>
        <ol class="breadcrumb">
            @Html.MvcSiteMap().SiteMapPath("_BootstrapSiteMapPathHelperModel")
        </ol>
    </nav>
    @RenderBody()
</div>