@model List<Entidades.Consorcio>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
}

<h2>Lista de Consorcios</h2>

<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Provincia</th>
        <th>Ciudad</th>
        <th>Unidades</th>
        <th>Expensas</th>
        <th>Gastos</th>
        <th>Eliminar</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@Html.ActionLink("" + @Html.DisplayFor(m => item.Nombre) + "", "update", "Consorcio", new { id = item.IdConsorcio }, null)</td>
    <td>@Html.DisplayFor(m => item.Provincia.Nombre)</td>
    <td>@Html.DisplayFor(m => item.Ciudad)</td>
    <td>@Html.ActionLink("Ver Unidades", "listarUnidades", "Unidad", new { id = item.IdConsorcio }, null)</td>
    <td>@Html.ActionLink("Ver Expensas", "listarExpensas", "Expensa", new { id = item.IdConsorcio }, null)</td>
    <td>@Html.ActionLink("Ver Gastos", "list", "Gasto", new { id = item.IdConsorcio }, null)</td>
    <td>@Html.ActionLink("Borrar", "delete", "Consorcio", new { id = item.IdConsorcio }, null)</td>
</tr>
    }
</table>

